{
  "name": "@dmitrysev/mern-app",
  "private": true,
  "version": "1.0.0",
  "description": "MERN application",
  "keywords": [
    "node",
    "express",
    "mern",
    "fullstack",
    "docker"
  ],
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "node server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "preview": "cross-env NODE_ENV=production node server",
    "typecheck": "react-router typegen && tsc",
    "dev:router": "react-router dev",
    "start:serve": "react-router-serve ./build/server/index.js",
    "build:router": "react-router build"
  },
  "dependencies": {
    "@react-router/node": "^7.1.3",
    "@react-router/serve": "^7.1.3",
    "body-parser": "^2.0.2",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "isbot": "^5.1.17",
    "mongoose": "^8.10.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.3",
    "sirv": "^3.0.0"
  },
  "devDependencies": {
    "@react-router/dev": "^7.1.3",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "classnames": "^2.5.1",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.49",
    "typescript": "~5.7.2",
    "vite": "^6.0.1",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
